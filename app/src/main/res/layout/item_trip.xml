<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Foto do motorista (ícone circular) -->
    <ImageView
        android:id="@+id/driverImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icone_pessoa"
        android:layout_marginEnd="16dp" />

    <!-- Informações do motorista e preço -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/driverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOME DO MOTORISTA"
            android:textColor="#4D7F73"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/driverRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="★ 4.9"
            android:textColor="#4D7F73"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Preço da viagem -->
    <TextView
        android:id="@+id/tripPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$00,00"
        android:textColor="#4D7F73"
        android:textSize="16sp"
        android:textStyle="bold"/>
</LinearLayout>
