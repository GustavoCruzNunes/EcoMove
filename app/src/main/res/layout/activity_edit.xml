<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBD3D2"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título da página -->
        <TextView
            android:id="@+id/editTripTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="EDITAR CORRIDA"
            android:textColor="#4D7F73"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Campo para alterar endereço de origem -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <!-- Endereço de Origem -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_background"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <EditText
                    android:id="@+id/editOriginField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Endereço de origem"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#707070" />

                <ImageButton
                    android:id="@+id/editOriginButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:src="@drawable/ic_edit"
                    app:tint="#4D7F73" />
            </LinearLayout>

            <!-- Endereço de Destino -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_background"
                android:elevation="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <EditText
                    android:id="@+id/editDestinationField"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Endereço de destino"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#707070" />

                <ImageButton
                    android:id="@+id/editDestinationButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:src="@drawable/ic_edit"
                    app:tint="#4D7F73" />
            </LinearLayout>

        </LinearLayout>

        <!-- Campo para editar data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <EditText
                android:id="@+id/editDateField"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Data"
                android:background="@null"
                android:textColor="#000000"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Campo para editar horário -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_background"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <EditText
                android:id="@+id/editTimeField"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Horário"
                android:background="@null"
                android:textColor="#000000"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Botões de ação -->
        <Button
            android:id="@+id/saveChangesButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#4D7F73"
            android:text="SALVAR ALTERAÇÕES"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/cancelTripButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#FF6B6B"
            android:text="CANCELAR CORRIDA"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</RelativeLayout>
