<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D6D4"
    tools:context=".UserActivity">

    <!-- Circular avatar -->
    <View
        android:id="@+id/avatarView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/icone_pessoa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Nome -->
    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:text="NOME:"
        android:textSize="16sp"
        android:gravity=""
        android:padding="16dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/avatarView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/emailLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:text="EMAIL:"
        android:textSize="16sp"
        android:layout_margin="20dp"
        android:gravity=""
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/nameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Username -->
    <TextView
        android:id="@+id/creationDateLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:text="DATA DE CRIAÇÃO:"
        android:textSize="16sp"
        android:layout_margin="20dp"

        android:padding="16dp"
        android:gravity=""
        app:layout_constraintTop_toBottomOf="@id/emailLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botão Alterar Senha -->
    <Button
        android:id="@+id/changePasswordButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="ALTERAR SENHA"
        android:backgroundTint="#558B6E"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/creationDateLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Botão Home -->
    <Button
        android:id="@+id/homeButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="HOME"
        android:backgroundTint="#558B6E"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/changePasswordButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Botão Histórico -->
    <Button
        android:id="@+id/historyButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="HISTORICO"
        android:backgroundTint="#558B6E"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/homeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Botão Quem Somos Nós -->
    <Button
        android:id="@+id/aboutUsButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="QUEM SOMOS NÓS"
        android:backgroundTint="#558B6E"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/historyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>